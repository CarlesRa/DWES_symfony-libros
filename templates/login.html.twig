{% extends 'base.html.twig' %}

{% block title %}Libros{% endblock %}

{% block body %}
    
    <div class="container">
        <div class="grid">
            <div class="row mt-5">
                <div class="col-md-4 offset-md-4 mt-5 back-form">
                    <h1 class="center">Login</h1>

                    {% if error %}
                        <div class="talert alert-danger alert-dismissible fade show p-1">
                            {{ error.messageKey }}
                        </div>
                    {% endif %}
                    <form action="{{ path('login') }}" method="post">

                        <div class="form-group">        
                            <label for="username">Login:</label>
                            <input class="form-control" type="text" id="username" name="_username" value="{{ lastUsername }}">
                        </div>

                        <div class="form-group">
                            <label for="password">Password:</label>
                            <input class="form-control" type="password" name="_password" id="password">
                        </div>
            
                        <div class="form-group text-big">
                            <button class="btn btn-primary" type="submit">Entrar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
    </div>
    
{% endblock %}
