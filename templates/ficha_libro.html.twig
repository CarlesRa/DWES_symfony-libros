{% extends 'layout.html.twig' %}
{% block title %}Ficha del libro{% endblock %}
{% block content %}

    {% if libro %}
    <div class="card text-white bg-info mb-3" style="max-width: 35rem;">
            <div class="card-header">
                <h1>{{ libro.titulo }}</h1>
                <small>{{ libro.isbn }}</small>
            </div>
            <div class="card-body">
                <h2>Autor: {{ libro.autor }}</h2>
                <h2>PÃ¡ginas: {{ libro.paginas }}</h2>
                <h2>Editorial: 
            
                {% if libro.editorial %}
                    {{libro.editorial.nombre}}
                {% else %}
                    N/A
                {% endif %} 
                </h2>
            </div>
    <div>
    {% else %}
        <h1>No existe el libro</h1>
    {% endif %}
    
{% endblock %}