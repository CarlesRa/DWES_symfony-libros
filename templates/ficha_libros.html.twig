{% extends 'layout.html.twig' %}
{% block title %}Libros{% endblock %}
{% block content %}

    
    <div class="lista-libros">
        {% if libros %}
        <div class="back-rgba">
            <h1 class="title-back">Listado de libros</h1>
        </div>
        <hr>
        <div class="container offset-md-2">
            {% for libro in libros %}
                <ul class="list-group list-group-horizontal col-md-6 mt-1">
                    <a class="text-big list-group-item list-group-item-action list-group-item-primary col-md-4" href="{{path('ficha_libro',{'isbn': libro.isbn})}}">
                        {{libro.titulo}} 
                        <a class="btn btn-danger text-big" href="{{path('eliminar',{'isbn': libro.isbn})}}"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                            <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                            </svg>
                        </a>
                    </a>
                </ul>
            {% endfor %}
        </div>
            
        {% else %}
        <div class="back-rgba">
            <h1 class="title-back">No hay libros disponibles</h1>
            <a class="btn btn-primary text-big" href="{{path('insertar')}}">Insertar Libros</a> 
        </div>
        <hr>
        {% endif %}
    </div>
    

{% endblock %}